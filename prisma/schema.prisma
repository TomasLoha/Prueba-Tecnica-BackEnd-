generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id              String    @id @default(uuid())
    disponible      Boolean
    fechaNacimiento DateTime
    dni             String    @unique
    nombreCompleto  String
    sexo            String
    estadoCivil     String
    password        String
    deletedAt       DateTime?
    facturas        Factura[]
}

model Factura {
    id             String           @id @default(uuid())
    disponible     Boolean
    fecha          DateTime
    total          Float
    nombreFantasia String
    fechaFundacion String
    usuarioId      String
    deletedAt      DateTime?
    usuario        User             @relation(fields: [usuarioId], references: [id])
    detalleFactura detalleFactura[]
}

model detalleFactura {
    id         String    @id @default(uuid())
    disponible Boolean
    subtotal   Float
    cantidad   Int
    productoId String
    facturaId  String
    deletedAt  DateTime?
    factura    Factura   @relation(fields: [facturaId], references: [id])
    producto   Product   @relation(fields: [productoId], references: [id])
}

model Product {
    id             String           @id @default(uuid())
    disponible     Boolean
    nombre         String
    precioUnitario Float
    descripcion    String
    stock          Int
    deletedAt      DateTime?
    detalleFactura detalleFactura[]
}
